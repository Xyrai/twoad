{
  "manifest_version": 3,
  "name": "Twoad",
  "version": "1.0.0",
  "description": "üê∏ Hop into video downloads! Download Twitter/X videos with one click",
  "permissions": ["activeTab", "storage", "downloads"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "http://localhost:3000/*",
    "https://video.twimg.com/*",
    "https://api.fxtwitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon48.png"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
